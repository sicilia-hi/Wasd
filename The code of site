    <script>
        // Функции для цветового блока
        function changeColor(gradient) {
            const box = document.getElementById('colorBox');
            box.style.background = gradient;
            box.style.animation = 'pulse 0.5s ease';
            setTimeout(() => {
                box.style.animation = '';
            }, 500);
        }
        
        function randomColor() {
            const colors = [
                'linear-gradient(45deg, #ff9a9e, #fad0c4)',
                'linear-gradient(45deg, #a1c4fd, #c2e9fb)',
                'linear-gradient(45deg, #84fab0, #8fd3f4)',
                'linear-gradient(45deg, #ffecd2, #fcb69f)',
                'linear-gradient(45deg, #d4fc79, #96e6a1)',
                'linear-gradient(45deg, #a6c0fe, #f68084)',
                'linear-gradient(45deg, #fad0c4, #ffd1ff)',
                'linear-gradient(45deg, #667eea, #764ba2)',
                'linear-gradient(45deg, #f093fb, #f5576c)',
                'linear-gradient(45deg, #4facfe, #00f2fe)'
            ];
            
            const randomIndex = Math.floor(Math.random() * colors.length);
            changeColor(colors[randomIndex]);
        }
        
        // Анимация при загрузке страницы
        document.addEventListener('DOMContentLoaded', function() {
            const cards = document.querySelectorAll('.card');
            cards.forEach((card, index) => {
                setTimeout(() => {
                    card.classList.add('active');
                }, index * 200);
            });
            
            // Переключение темы
            const themeToggle = document.getElementById('themeToggle');
            const icon = themeToggle.querySelector('i');
            
            themeToggle.addEventListener('click', function() {
                document.body.classList.toggle('dark-theme');
                
                if (document.body.classList.contains('dark-theme')) {
                    icon.className = 'fas fa-sun';
                    themeToggle.title = 'Включить светлую тему';
                } else {
                    icon.className = 'fas fa-moon';
                    themeToggle.title = 'Включить темную тему';
                }
            });
            
            // Загрузка сохраненных работ из localStorage
            loadGallery();
        });
        
        // Функция для показа сообщений
        function showMessage(text) {
            alert(text);
        }
        
        // Функция для пульсации элементов
        function pulseAnimation() {
            const elements = document.querySelectorAll('.card, .color-box');
            elements.forEach(el => {
                el.style.animation = 'pulse 1s ease';
                setTimeout(() => {
                    el.style.animation = '';
                }, 1000);
            });
        }
        
        // Редактор текста
        function openEditor() {
            document.getElementById('editorModal').style.display = 'block';
            document.getElementById('textEditor').focus();
        }
        
        function closeEditor() {
            document.getElementById('editorModal').style.display = 'none';
        }
        
        function formatText(command) {
            const editor = document.getElementById('textEditor');
            const start = editor.selectionStart;
            const end = editor.selectionEnd;
            const selectedText = editor.value.substring(start, end);
            
            let formattedText = '';
            switch(command) {
                case 'bold':
                    formattedText = `<strong>${selectedText}</strong>`;
                    break;
                case 'italic':
                    formattedText = `<em>${selectedText}</em>`;
                    break;
                case 'underline':
                    formattedText = `<u>${selectedText}</u>`;
                    break;
            }
            
            editor.value = editor.value.substring(0, start) + formattedText + editor.value.substring(end);
            editor.focus();
            editor.setSelectionRange(start + formattedText.length, start + formattedText.length);
        }
        
        function clearEditor() {
            if (confirm('Очистить редактор? Все несохраненные изменения будут потеряны.')) {
                document.getElementById('textEditor').value = '';
            }
        }
        
        function saveWork() {
            const content = document.getElementById('textEditor').value.trim();
            
            if (!content) {
                alert('Пожалуйста, напишите что-нибудь перед сохранением!');
                return;
            }
            
            // Получаем сохраненные работы из localStorage
            let works = JSON.parse(localStorage.getItem('creativeWorks') || '[]');
            
            // Создаем новую работу
            const newWork = {
                id: Date.now(),
                title: content.substring(0, 50) + (content.length > 50 ? '...' : ''),
                content: content,
                date: new Date().toLocaleString('ru-RU'),
                type: determineWorkType(content)
            };
            
            // Добавляем работу в массив
            works.unshift(newWork);
            
            // Сохраняем в localStorage
            localStorage.setItem('creativeWorks', JSON.stringify(works));
            
            // Обновляем галерею
            loadGallery();
            
            // Закрываем редактор и показываем сообщение
            closeEditor();
            document.getElementById('textEditor').value = '';
            showMessage('Ваша работа сохранена в галерее!');
        }
        
        function determineWorkType(content) {
            const text = content.toLowerCase();
            
            if (text.includes('куплет') || text.includes('припев') || text.includes('гитар') || text.match(/\n\n/g)?.length > 3) {
                return 'Песня';
            } else if (text.split('.').length > 5 && text.length > 500) {
                return 'Эссе';
            } else if (text.split('\n').length > 3 && text.match(/[.!?]/g)?.length > 3) {
                return 'Рассказ';
            } else if (text.split('\n').length > 2 && text.length < 300) {
                return 'Стихотворение';
            } else {
                return 'Запись';
            }
        }
        
        function downloadWork() {
            const content = document.getElementById('textEditor').value;
            
            if (!content) {
                alert('Нет текста для скачивания!');
                return;
            }
            
            const blob = new Blob([content], { type: 'text/plain' });
            const url = URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = `моя_работа_${new Date().toISOString().split('T')[0]}.txt`;
            document.body.appendChild(a);
            a.click();
            document.body.removeChild(a);
            URL.revokeObjectURL(url);
        }
        
        // Галерея
        function openGallery() {
            document.getElementById('galleryModal').style.display = 'block';
            loadGallery();
        }
        
        function closeGallery() {
            document.getElementById('galleryModal').style.display = 'none';
        }
        
        function loadGallery() {
            const works = JSON.parse(localStorage.getItem('creativeWorks') || '[]');
            const galleryGrid = document.getElementById('galleryGrid');
            const emptyGallery = document.getElementById('emptyGallery');
            
            galleryGrid.innerHTML = '';
            
            if (works.length === 0) {
                emptyGallery.style.display = 'block';
                return;
            }
            
            emptyGallery.style.display = 'none';
            
            works.forEach(work => {
                const workElement = document.createElement('div');
                workElement.className = 'gallery-item';
                workElement.innerHTML = `
                    <div class="gallery-item-title">
                        <i class="fas fa-${getIconByType(work.type)}"></i> ${work.title}
                    </div>
                    <div class="gallery-item-content">
                        ${work.content.substring(0, 200)}${work.content.length > 200 ? '...' : ''}
                    </div>
                    <div class="gallery-item-date">${work.date} • ${work.type}</div>
                    <button class="delete-btn" onclick="deleteWork(${work.id})">
                        <i class="fas fa-trash"></i> Удалить
                    </button>
                `;
                galleryGrid.appendChild(workElement);
            });
        }
        
        function getIconByType(type) {
            switch(type) {
                case 'Песня': return 'music';
                case 'Эссе': return 'file-alt';
                case 'Рассказ': return 'book';
                case 'Стихотворение': return 'feather-alt';
                default: return 'edit';
            }
        }
        
        function deleteWork(id) {
            if (!confirm('Удалить эту работу? Это действие нельзя отменить.')) {
                return;
            }
            
            let works = JSON.parse(localStorage.getItem('creativeWorks') || '[]');
            works = works.filter(work => work.id !== id);
            localStorage.setItem('creativeWorks', JSON.stringify(works));
            loadGallery();
        }
        
        // Плавный скролл для ссылок
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });
        
        // Закрытие модальных окон при клике вне их
        window.addEventListener('click', function(event) {
            const editorModal = document.getElementById('editorModal');
            const galleryModal = document.getElementById('galleryModal');
            
            if (event.target === editorModal) {
                closeEditor();
            }
            
            if (event.target === galleryModal) {
                closeGallery();
            }
        });
    </script>
</body>
</html>
